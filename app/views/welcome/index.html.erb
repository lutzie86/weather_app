<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="well">
			<h1>Look Up Your Local Forecast</h1>
			<div>
				<%= form_tag index_path do %>
					<%= text_field_tag :zipcode, nil, placeholder: "zipcode", class: "form-control" %> <br/>
					<%= submit_tag "Check Weather", class: "btn btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>	
</div>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="well">
<!-- Bring in an instance variable from our controller to dipslay on our index page. -->
<!-- Check to maake sure @location is not empty or nil and that the API did not return an error -->
			<% if @location != nil && @location != "" && (@error == nil)%>
			<h1> Forecast for <%= @location %> </h1>
			<div class= "row">
			<div class="col-md-7">
			<p>					
			Temperature is:
			<%= @temp %>* F
			</p>
			<p>
			Cloud cover:
			<%= @cloudiness %>%
			</p>
				<p>
				Wind:
				<%= @windiness %>mph
				</p>
			<div class="col-md-5">
				<p>
				<%= @weather_words %>
				<img src="http://openweathermap.org/img/w/<%= @weather_icon%>.png">
				</p>
		</div>
			</div>
		</div>
	</div>
</div>
		<% elsif @status == "404" %>
			<p>Error:<%= @error %>. Please try again.</p>
		<% else %>
			<p>Enter a zip code to check the weather!</p>
		<% end %>
		</div>
	</div>
</div>
